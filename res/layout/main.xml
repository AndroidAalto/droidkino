<LinearLayout android:id="@+id/main"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_height="fill_parent"
	android:layout_width="fill_parent">
	<RadioGroup android:layout_width="match_parent"
		android:layout_height="wrap_content" android:orientation="vertical"
		android:checkedButton="@+id/kino" android:id="@+id/menu_theather">
		<RadioButton android:text="Kinopalatsi" android:id="@+id/kino" />
		<RadioButton android:text="Maxim" android:id="@+id/maxi" />
		<RadioButton android:text="Tennispalatsi" android:id="@+id/tenn" />
		<RadioButton android:text="Omena" android:id="@+id/omen" />
	</RadioGroup>
	<Button android:enabled="false" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="Search movies"
		android:id="@+id/search" />
</LinearLayout>
